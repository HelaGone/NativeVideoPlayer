<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbl_estrellas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:text="@string/lbl_las_estrellas"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <ImageButton
        android:id="@+id/img_play_btn_estrellas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/play_img_btn"
        app:layout_constraintTop_toBottomOf="@id/lbl_estrellas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:minWidth="90dp"
        android:minHeight="45dp"
        android:background="@color/colorAccent"
        android:src="@drawable/exo_controls_play"/>

    <TextView
        android:id="@+id/lbl_vod"
        app:layout_constraintTop_toBottomOf="@id/img_play_btn_estrellas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:text="@string/lbl_vod"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/img_play_btn_vod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/play_img_btn"
        app:layout_constraintTop_toBottomOf="@+id/lbl_vod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:minWidth="90dp"
        android:minHeight="45dp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_playlist_play"
        />

</androidx.constraintlayout.widget.ConstraintLayout>